<?xml version="1.0" encoding="UTF-8"?>
<!-- Definition of new Model -->
<model name="ipawf:workflowmodel"
    xmlns="http://www.alfresco.org/model/dictionary/1.0">

    <!-- Optional meta-data about the model -->
    <description>IPACOOP Workflow Model</description>
    <author>Consultia IT Panama</author>
    <version>1.0</version>

    <!-- Imports are required to allow references to definitions in other models -->
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
        <import uri="http://www.alfresco.org/model/bpm/1.0" prefix="bpm" />
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>   
    </imports>

    <!-- Introduction of new namespaces defined by this model -->
    <namespaces>
        <namespace uri="http://www.ipacoop.com/model/workflow/1.0" prefix="ipawf" />
    </namespaces>

    <types>	
        <type name="ipawf:submitReceiveDocTask">            
            <parent>bpm:startTask</parent>
            <properties>
                <property name="ipawf:controlNumber">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <multiple>false</multiple>
                </property>
            </properties>
        </type>
        
        <type name="ipawf:submitReceiveBossTask">
        	<parent>ipawf:approvedTask</parent>
        	<properties>
        		<property name="ipawf:commentBoss">
        			<type>d:text</type>
        			<mandatory>true</mandatory>
        			<multiple>true</multiple>
        		</property>
        	</properties>
        	<mandatory-aspects>
                <aspect>bpm:assignees</aspect>
            </mandatory-aspects>
        </type>
        
        <type name="ipawf:submitWordDocumentation">
        	<parent>ipawf:approvedTask</parent>
        </type>
        
        <type name="ipawf:submitAnalize">
        	<parent>ipawf:approvedTask</parent>
        </type>
        
        <type name="ipawf:submitPlanning">
        	<parent>ipawf:approvedTask</parent>
        </type>
        
        <type name="ipawf:submitSign">
        	<parent>ipawf:approvedTask</parent>
        </type>
        
        <type name="ipawf:submitInscription">
        	<parent>ipawf:approvedTask</parent>
        </type>
        
        <type name="ipawf:submitReceiveDirProv">
        	<parent>ipawf:approvedTask</parent>
        </type>
        
        <type name="ipawf:reviewTask">
            <parent>bpm:workflowTask</parent>
            <properties/>
            <associations/>
            <overrides>
                <property name="bpm:packageItemActionGroup">
                    <mandatory/>
                    <default>edit_package_item_actions</default>
                    <constraints/>
                </property>
            </overrides>
            <mandatory-aspects/>
        </type>
        
        <type name="ipawf:approvedTask">
            <parent>bpm:workflowTask</parent>
            <properties/>
            <associations/>
            <overrides/>
            <mandatory-aspects/>
        </type>
    </types>

</model>